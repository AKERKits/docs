<div class='header'>
  <div class='left'>
    <div class="toggle-nav">
      <a href="#" class="subnav-link toggle-navigation">
        <i class="ion-navicon" title="show/hide the navigation"></i>
      </a>
    </div>
    <a href="/">
      <img src="/assets/images/aker-logo.png" id="logo">
    </a>
    <div class="sections">
      <a class="nav {{#contains path.href 'tutorials'}}active{{/contains}}" href="/tutorials/topics/growsquare">Design Tutorials</a>
      <a class="nav {{#contains path.href 'assembly-manual'}}active{{/contains}}" href="/assembly-manuals">Assembly Manuals</a>
      <a class="nav {{#contains path.href 'user-manual'}}active{{/contains}}" href="/user-manuals">User Manuals</a>
    </div>
    <div class="dropdown mobile-only">
      <a id="dLabel" data-target="#" class="nav" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        {{first-word-in-relative-url path.href}}
        <i class="icon ion-chevron-down"></i>
      </a>
      <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><a href="/tutorials/topics/growsquare">Design Tutorials</a></li>
        <li><a href="/assembly-manuals">Assembly Manuals</a></li>
        <li><a href="/user-manuals">User Manuals</a></li>
      </ul>
    </div>
    <div class="search">
      <div class="search-input-wrapper">
        <i class="ion-search"></i>
        <input class="search-box" type="text" placeholder="Search" value=""/>
      </div>
      <div class="search-results">
      </div>
    </div>
  </div>
  <div class='right'>
    {{#if formats}}
      <div class="dropdown">
        <a id="dLabel" data-target="#" class="nav nav-device" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <i class="im-devices-icon"></i>
          {{#if solidworks}}
            SolidWworks
          {{/if}}
          {{#if sketchup}}
            Sketchup
          {{/if}}
          {{#if rhino}}
            Rhino
          {{/if}}
        </a>
        <ul class="dropdown-menu" aria-labelledby="dLabel">
          {{#contains devices 'solidworks'}}
            <li><a href="{{path.href}}{{path.name}}/solidworsk/">SolidWorks</a></li>
          {{/contains}}
          {{#contains devices 'sketchup'}}
            <li><a href="{{path.href}}{{path.name}}/sketchup/">Sketchup</a></li>
          {{/contains}}
          {{#contains devices 'rhino'}}
            <li><a href="{{path.href}}{{path.name}}/rhino/">Rhino</a></li>
          {{/contains}}
        </ul>
      </div>
    {{/if}}
    <a href='{{edit-link branch path.href path.name}}' class="nav" target="_blank"><i class="ion-edit"></i>Edit</a>
 
  </div>
</div>
